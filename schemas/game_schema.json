{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "sets": {
      "type": "array",
      "description": "Stats for each set in the match",
      "items": {
        "type": "object",
        "properties": {
          "score": {
            "type": "object",
            "properties": {
              "team": { "type": "integer", "minimum": 0 },
              "opponent": { "type": "integer", "minimum": 0 }
            },
            "required": ["team", "opponent"]
          },
          "team": {
            "type": "object",
            "properties": {
              "starting_rotation": {
                "type": "array",
                "items": { "type": "integer" },
                "minItems": 6,
                "maxItems": 6,
                "description": "Player numbers in starting positions 1â€“6"
              },
              "player_stats": { "$ref": "#/$defs/playerStats" }
            },
            "required": ["player_stats"],
            "additionalProperties": false
          },
          "opponent": {
            "type": "object",
            "properties": {
              "starting_rotation": {
                "type": "array",
                "items": { "type": "integer" },
                "minItems": 6,
                "maxItems": 6
              },
              "player_stats": { "$ref": "#/$defs/playerStats" }
            },
            "additionalProperties": false
          }
        },
        "required": ["team"],
        "additionalProperties": false
      }
    }
  },
  "required": ["sets"],
  "additionalProperties": false,
  "$defs": {
    "playerStats": {
      "type": "object",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "object",
          "properties": {
            "kills": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "target_position": { "type": "integer", "minimum": 1, "maximum": 6 }
                },
                "required": ["target_position"]
              }
            },
            "sets": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "from_position": { "type": "integer", "minimum": 1, "maximum": 6 },
                  "to_position": { "type": "integer", "minimum": 1, "maximum": 6 }
                },
                "required": ["from_position", "to_position"]
              }
            },
            "blocks": { "type": "integer", "minimum": 0 },
            "digs": { "type": "integer", "minimum": 0 },
            "aces": { "type": "integer", "minimum": 0 },
            "missed_serves": { "type": "integer", "minimum": 0 },
            "errors": { "type": "integer", "minimum": 0 }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
